<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-6">
    <div class="thumbnail">
      <%= image_tag @listing.image.url %>
    </div>
  </div>
  <div class="col-md-6">
    <h3><%= @listing.name_english %></h3>
    <h3><%= @listing.name_spanish %></h3>
    <p><%= @listing.description_english %></p>
    <p><%= @listing.description_spanish %></p>
    <p>Weight: <%= @listing.weight %> gm</p>
    <p>Product code: <%= @listing.id %></p>
  </div>
</div>

<%= link_to 'Edit', edit_listing_path(@listing), class: "btn btn-link" %> |
<%= link_to 'Back', listings_path, class: "btn btn-link" %>
