<%= form_for @listing, :html => { :multipart => true }  do |f| %>

  <% if @listing.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissable" >
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved</h4>

      <ul>
      <% @listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "English name" %><br>
    <%= f.text_field :name_english, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "Nombre Español" %><br>
    <%= f.text_field :name_spanish, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "English description" %><br>
    <%= f.text_area :description_english, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "Descripción Español" %><br>
    <%= f.text_area :description_spanish, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "English size" %><br>
    <%= f.text_field :size_english, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "Tamaño Español" %><br>
    <%= f.text_field :size_spanish, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :weight %><br>
    <%= f.number_field :weight %>
  </div>
  <div class="form-group">
    <%= f.file_field :image, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
