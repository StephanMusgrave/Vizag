<%= form_for @listing, :html => { multipart => true }  do |f| %>
  <% if @listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
      <% @listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "English name" %><br>
    <%= f.text_field :name_english %>
  </div>
  <div class="form-group">
    <%= f.label :name_spanish %><br>
    <%= f.text_field :name_spanish %>
  </div>
  <div class="form-group">
    <%= f.label :description_english %><br>
    <%= f.text_area :description_english %>
  </div>
  <div class="form-group">
    <%= f.label :description_spanish %><br>
    <%= f.text_area :description_spanish %>
  </div>
  <div class="form-group">
    <%= f.label :size_english %><br>
    <%= f.text_field :size_english %>
  </div>
  <div class="form-group">
    <%= f.label :size_spanish %><br>
    <%= f.text_field :size_spanish %>
  </div>
  <div class="form-group">
    <%= f.label :weight %><br>
    <%= f.number_field :weight %>
  </div>
  <div class="form-group">
    <%= f.file_field :image, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
