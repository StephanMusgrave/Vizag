<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name English</th>
      <th>Name Spanish</th>
      <th>String</th>
      <th>Description English</th>
      <th>Description Spanish</th>
      <th>Size English</th>
      <th>Size Spanish</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.name_english %></td>
        <td><%= listing.name_spanish %></td>
        <td><%= listing.description_english %></td>
        <td><%= listing.description_spanish %></td>
        <td><%= listing.size_english %></td>
        <td><%= listing.size_spanish %></td>
        <td><%= listing.weight %></td>
        <td><%= link_to 'Show', listing, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
