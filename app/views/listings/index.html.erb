<p id="notice"><%= notice %></p>

<h1>Listing Listings</h1>

<table>
  <thead>
    <tr>
      <th>Name english</th>
      <th>Name spanish</th>
      <th>String</th>
      <th>Description english</th>
      <th>Description spanish</th>
      <th>Size english</th>
      <th>Size spanish</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.name_english %></td>
        <td><%= listing.name_spanish %></td>
        <td><%= listing.string %></td>
        <td><%= listing.description_english %></td>
        <td><%= listing.description_spanish %></td>
        <td><%= listing.size_english %></td>
        <td><%= listing.size_spanish %></td>
        <td><%= listing.weight %></td>
        <td><%= link_to 'Show', listing %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

