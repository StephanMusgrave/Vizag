

<%= form_for @listing, :html => { :multipart => true }  do |f| %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name_english, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Weight (g)" %><br>
    <%= f.number_field :weight, required: true %>
  </div>

  <div class="form-group">
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="control-group">
    <%= f.label :pictures %>
    <div class="controls">
      <%= file_field_tag "pictures[]", type: :file, multiple: true %>
    </div>
  </div>

  <!-- <div class="form-group"> -->
    <%#= f.fields_for :image_containers do |x| %>
      <%#= x.label :picture, "Picture *", class: 'primary-color' %>
      <%#= x.file_field :picture, class: 'form-control' %>
    <%# end %>
  <!-- </div> -->

  <div class="form-actions">
    <%= f.submit "Save Product", class:'btn btn-success' %>
  </div>
<% end %>


